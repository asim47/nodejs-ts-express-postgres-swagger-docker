{
  "name": "boilerplate-nodejs-2023-dec",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrator": "ts-node ./src/database/migrator.ts",
    "local-only-cleanup-database": "ts-node ./src/database/cleanup/cleanup.ts",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "lint": "eslint src/**/*.ts",
    "lintfix": "npx lint-staged && eslint src/**/*.ts --fix",
    "prepare": "husky install",
    "pre-commit": "echo \"[Husky] checking for style issues and fixing them.\"",
    "docker": "docker-compose up",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up"
  },
  "keywords": [],
  "author": "Asim Bilal",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.474.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "helmet": "^6.0.1",
    "husky": "^8.0.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "prettier": "^2.8.4",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.4",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.3",
    "@types/pg": "^8.10.7",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.21",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "workspaces": [
    "src",
    "src/database",
    "src/helpers",
    "src/internal-api",
    "src/seeds"
  ]
}
